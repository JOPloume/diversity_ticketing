<%= provide :title, 'Submit Event' %>
<p class="breadcrumb"><%= link_to 'Home', root_path %> > <%= link_to 'Events', events_path %> > New event</p>

<h1 class="page-title"><span class="page-title-firstword">Create</span> new event</h1>
<p class="page-description">Please fill out this form. Fields marked with * are required.</p>

<% if @event.errors.any? %>
  <div class="error">
    <p><%= pluralize(@event.errors.count, "error") %> stopped this event from being saved:</p>

    <ul>
      <% @event.errors.messages.each do |field, messages| %>
        <li><%= @event.class.human_attribute_name(field) %> <%= join_messages(messages) %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render partial: "form", locals: {submit_tag_text: "Preview event", form_url: event_preview_path} %>
