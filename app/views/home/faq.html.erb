<div id="faq">
  <h1 class="page-title">FAQ</h1>

  <ul>
    <li><%= link_to t('.what_is_diversity_tickets'), anchor: t('.what_is_diversity_tickets_anchor') %></li>
    <li><%= link_to t('.diversity_tickets_options') , anchor: t('.diversity_tickets_options_anchor') %></li>
    <li><%= link_to t('.why_diversity_tickets'), anchor: t('.why_diversity_tickets_anchor') %></li>
    <li><%= link_to t('.which_events_eligible'), anchor: t('.which_events_eligible_anchor') %></li>
    <li><%= link_to t('.how_can_i_submit_my_event'), anchor: t('.how_can_i_submit_my_event_anchor') %></li>
    <li><%= link_to t('.how_long_event_approved'), anchor: t('.how_long_event_approved_anchor') %></li>
    <li><%= link_to t('.why_even_not_approved'), anchor: t('.why_even_not_approved_anchor') %></li>
    <li><%= link_to t('.how_can_i_add_tags'), anchor: t('.how_can_i_add_tags_anchor') %></li>
    <li><%= link_to t('.how_can_i_apply'), anchor: t('.how_can_i_apply_anchor')%></li>
    <li><%= link_to t('.am_i_eligible'), anchor: t('.am_i_eligible_anchor') %></li>
    <li><%= link_to t('.when_find_application_approved_rejected'), anchor: t('.when_find_application_approved_rejected_anchor') %></li>
  </ul>


  <h2 class="page-subtitle"><%= t('.general')%></h2>

  <p id="general_org"><strong><%= t('.what_is_diversity_tickets') %></strong></p>
  <p><%= t('.what_is_diversity_tickets_answer') %></p>

  <p id="general_options"><strong><%= t('.diversity_tickets_options') %></strong></p>
  <%= raw t('.diversity_tickets_options_answer') %>

  <p id="general_need"><strong><%= t('.why_diversity_tickets') %></strong></p>
  <%= raw t('.why_diversity_tickets_answer', geekfeminism: '<a href="http://geekfeminism.wikia.com/wiki/FLOSS" target="_blank">', travis_blog: '<a href="http://foundation.travis-ci.org/2016/04/26/diversity-tickets/">' ).html_safe %>


  <h2 class="page-subtitle"><%=t('.for_conference_organisers') %></h2>

  <p id="conf_1"><strong><%= t('.which_events_eligible') %></strong></p>
  <%= raw t('.which_events_eligible', travis_website: '<a href="http://foundation.travis-ci.org/">').html_safe %>

  <p id="conf_2"><strong><%= t('.how_can_i_submit_my_event') %></strong></p>
  <%= raw t('.how_can_i_submit_my_event_answer') %>

  <p id="conf_3"><strong><%= t('.how_long_event_approved') %></strong></p>
  <%= raw t('.how_long_event_approved_answer') %>

  <p id="conf_4"><strong><%= t('.why_even_not_approved') %></strong></p>
  <%= raw t('.why_even_not_approved_answer') %>

  <p id="conf_5"><strong><%= t('.how_can_i_add_tags') %></strong></p>
  <%=raw t('.how_can_i_add_tags_answer', travis_email: 'mail_to "foundation@travis-ci.org"') %>


  <h2 class="page-subtitle"><%= t('.for_grant_applicants') %></h2>

  <p id="grant_1"><strong><%= t('.how_can_i_apply') %></strong></p>
  <%= raw t('.how_can_i_apply_answer', events_link: '<a href="https://diversitytickets.org/events" target="_blank">') %>

  <p id="grant_2"><strong><%= t('.am_i_eligible') %></strong></p>
  <%= raw t('.am_i_eligible_answer') %>

  <p id="grant_3"><strong><%= t('.when_find_application_approved_rejected') %></strong></p>
  <%= raw t('.when_find_application_approved_rejected_answer')
  <%= mail_to "foundation@travis-ci.org" %>
</div>
