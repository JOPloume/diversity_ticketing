<p class="breadcrumb">
  <%= link_to t('.home-link'), root_path %> >
  <% if current_user.admin? %>
    <%= link_to t('.admin-link'), admin_path %> >
    <%= link_to @event.name, event_admin_path(@event.id) %>
    > <%= t('.application-by', applicant_name: @application.name) %>
  <% else %>
    <%= link_to t('.your-applications'), user_applications_path(current_user.id) %>
    > <%= t('.application-for', event_name: @event.name) %>
  <% end %>

</p>

<h1 class="box-title"><%= t('.application-for', event_name: @event.name) %></h1>

<section class="box">
  <p class="detail-pair">
    <strong>
      <%= t('.attendee_info_1', event_name: @event.name) %>
    </strong>
    <%= @application.attendee_info_1 %>
  </p>

  <p class="detail-pair">
    <strong><%=t('.attendee_info_2')%></strong>
    <%= @application.attendee_info_2 %>
  </p>

  <p class="detail-pair">
    <strong><%=t('.name')%></strong>
    <%= @application.name %>
  </p>

  <p class="detail-pair">
    <strong><%=t('.email')%></strong>
    <%= @application.email %>
  </p>

  <% if @application.visa_needed %>
    <p class="detail-pair">
      <strong><%=t('.visa-needed')%></strong>
    </p>
  <% end %>
</section>

<% if @application.event.open? %>
  <% if !@application.submitted %>
    <%= form_for @application, url: submit_event_application_path(@event.id, @application.id), builder: ::FormBuilder do |f| %>

      <% if @application.errors.any? %>
        <div class="error">
          <p><%= pluralize(@application.errors.count, "error") %> stopped this application from being saved:</p>
          <ul>
            <% @application.errors.messages.each do |field, messages| %>
              <li><%= @application.class.human_attribute_name(field) %> <%= join_messages(messages) %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <section class="box">
        <%= f.form_field :text_field, :email_confirmation, 'Email confirmation' %>
        <div class="form_field--check">
          <%= label_tag do %>
          <%= f.check_box :terms_and_conditions, checked: false %>
          <span class="check-label"><%=t('.agree-terms-and-conditions') %></span>
          <% end %>
          <p id="terms-and-conditions">
            <%= t('.terms-and-conditions_1') %>
          </p>
          <ul>
            <% if @event.ticket_funded? %>
              <li><%= t('.terms-and-conditions_2') %></li>
            <% end %>
            <% if @event.travel_funded? %>
              <li><%= t('.terms-and-conditions_3') %></li>
            <% end %>
            <% if @event.accommodation_funded? %>
              <li><%= t('.terms-and-conditions_4') %></li>
            <% end %>
            <%=raw t('.terms-and-conditions_5') %>
          </ul>
          <% if @event.travel_funded? %>
            <p><%= t('.terms-and-conditions_6') %></p>
          <% end %>
          <p><%= t('.terms-and-conditions_7', event: @event.name, href: link_to(t('.code-of-conduct'), @event.code_of_conduct)).html_safe %></p>
          </div>
          </section>
      <div>
        <%= f.submit(t('.submit-application'), class: "btn btn-save submit-application") %>
    <% end %>
  <% else %>
    <div>
  <% end %>
  <% unless current_user.admin? %>
    <%= link_to t('.edit'), edit_event_application_path(@event.id, @application.id),
        class: "btn btn-edit" %>
    <%= link_to t('.delete'), event_application_path(@event.id, @application.id),
        class: "btn btn-delete",  method: :delete,
        data: { confirm: t('.are-you-sure') } %>
  <% end %>
  </div>
<% elsif @application.submitted == false %>
  <div>
    <%= link_to t('.delete'), event_application_path(@event.id, @application.id),
        class: "btn btn-delete",  method: :delete,
        data: { confirm: t('.are-you-sure') } %>
  </div>
<% end %>
<% if current_user.admin? %>
  <div class="box">
    <p> Application status: <%= @application.status %> </p>
    <%= link_to t('.delete-application'), event_application_path(@event.id, @application.id),
        class: "btn btn-delete",  method: :delete,
        data: { confirm: t('.are-you-sure') } %>
    <% if @application.submitted == true && !@event.past? %>
      <% if @application.status == 'pending' %>
        <%= link_to t('.approve').capitalize, approve_event_application_path(@application.event_id, @application.id),
            method: :post, class: "btn btn-save approve-application",
            title: t('.approve') %>
        <%= link_to t('.reject').capitalize, reject_event_application_path(@application.event_id, @application.id),
         method: :post, class: "btn btn-external reject-application",
         title: t('.reject') %>
      <% elsif @application.status == 'approved' || @application.status == 'rejected' %>
        <%= link_to t('.revert').capitalize, revert_event_application_path(@application.event_id, @application.id),
               method: :post, class: "btn btn-edit revert-application",
               title: t('.revert') %>
      <% end %>
    <% end %>
  </div>
<% end %>
  <p>
    <%= link_to t('.show-event-details'), event_path(@event.id) %>
  </p>
